<h1>Add a new task</h1>
<%= form_for @post do |f| %>
<%if @post.errors.any? %>
   <h2>Errors:</h2>
   <ul>
     <%@post.errors.full_messages.each do |m| %>
	<li><%= m %></li>
     <%end%>
   </ul>
<%end%>
<p><%= f.label :title %><br/>
    <%= f.text_field :title %>
 </p>
 <p><%= f.label :status %><br/>
    <%= f.text_area :status %>
 </p>
 <p><%= f.submit "Add a new task" %>
 </p>
<%end%>

